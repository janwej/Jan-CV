# Email Configuration for Contact Form
# Copy this file to .streamlit/secrets.toml and fill in your email credentials

[email]
# SMTP Server Settings
# For Gmail: smtp.gmail.com
# For Outlook: smtp-mail.outlook.com
# For Yahoo: smtp.mail.yahoo.com
# For custom SMTP: your-smtp-server.com
smtp_server = "smtp.gmail.com"
smtp_port = 587

# Your email credentials
# For Gmail, you'll need to use an "App Password" instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords
smtp_username = "my_email@gmail.com"
smtp_password = "enter password"

# The email address where you want to receive contact form messages
recipient_email = "my_email@gmail.com"

